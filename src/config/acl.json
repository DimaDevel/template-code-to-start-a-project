[
  {
    "group": "admin",
    "permissions": [
      {
        "resource": "*",
        "methods": "*",
        "action": "allow"
      }
    ]
  },
  {
    "group": "user",
    "permissions": [
      {
        "resource": "/users",
        "methods": ["GET"],
        "action": "allow"
      },

      {
        "resource": "devices/me",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "devices/me/:deviceId",
        "methods": ["DELETE"],
        "action": "allow"
      },
      {
        "resource": "users/me",
        "methods": ["GET", "PATCH"],
        "action": "allow"
      },
      {
        "resource": "users/:id",
        "methods": ["GET", "PATCH"],
        "action": "allow"
      },
      {
        "resource": "/auth/resend-verification-email",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "/auth/signin/refresh/:refreshTokenId",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "offers/",
        "methods": "*",
        "action": "allow"
      },
      {
        "resource": "offers/inRadius/*",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "offers/:offerId",
        "methods": ["GET"],
        "action": "allow"
      }
    ]
  },
  {
    "group": "guest",
    "permissions": [
      {
        "resource": "/auth/signin/refresh/:refreshTokenId",
        "methods": ["POST"],
        "action": "allow"
      }
    ]
  }
]
